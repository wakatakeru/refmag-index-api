version: "3.5"

services:
  app:
    container_name: refmag-index-api
    tty: true
    build:
      context: .
      target: builder
    ports:
      - "8080:8080"
    environment:
      DB_ADDR: db:3306
      DB_USER: refmag
      DB_NAME: refmag
      DB_PASS: refmag
    depends_on:
      - db
    command: ./bin/server
  db:
    container_name: mysql
    hostname: db
    image: mysql:8.0.20
    environment:
      MYSQL_ROOT_PASSWORD: refmag
      MYSQL_USER: refmag
      MYSQL_PASSWORD: refmag
      MYSQL_DATABASE: refmag
    command: --default-authentication-plugin=mysql_native_password
    expose:
      - "3306"
    volumes:
      - ./db:/docker-entrypoint-initdb.d
